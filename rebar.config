{erl_opts, [debug_info]}.
{deps, []}.

{plugins, [rebar3_eqc]}.

{pre_hooks,
  [{"(linux|darwin|solaris)", compile, "make -C c_src"},
   {"(freebsd)", compile, "gmake -C c_src"}]}.
{post_hooks,
  [{"(linux|darwin|solaris)", clean, "make -C c_src clean"},
   {"(freebsd)", clean, "gmake -C c_src clean"}]}.

{relx,
 [{release,
   {etcpip, "1"},
   [etcpip]},

  {sys_config, "config/sys.config"},
  {dev_mode, true},
  {include_erts, true},
  {include_src, false},
  {extended_start_script, true}]
}.

{profiles,
  [
    {eqc, [{erl_opts, [debug_info, {parse_transform, eqc_cover}, {parse_transform, pulse_instrument}]}]}
  ]
}.
